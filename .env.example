# Kraken AI Trading Bot Environment Variables

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=true

# Database Configuration
DATABASE_URL=sqlite:///./kraken-ai-trading-bot.db
# DATABASE_URL=postgresql://user:password@localhost/kraken-ai-trading-bot

# Kraken API Configuration
KRAKEN_API_KEY=your-kraken-api-key-here
KRAKEN_SECRET_KEY=your-kraken-secret-key-here

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Telegram Configuration
TELEGRAM_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# Trading Configuration
TRADING_ENABLED=true
TRADE_AMOUNT_USD=100
MIN_BALANCE_USD=65
TRADING_INTERVAL=3600
TRAILING_STOP_PERCENTAGE=0.99

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=*

